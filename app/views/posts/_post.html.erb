<%= button_to post, :method => :get, class: "w-full" do %>
  <div class="flex justify-between dark:hover:bg-gray-900 dark:text-white hover:bg-gray-100 rounded-3xl p-4 cursor-pointer h-40">
    <div class="flex gap-x-4 text-start">
      <% if post.image != nil %>
        <img src="<%= post.image %>" alt="thumbnail" class="object-cover rounded-2xl w-32 h-auto">
      <% else %>
        <%= image_tag "surprised_pikachu.png", class: "object-cover rounded-2xl w-32 h-auto" %>
      <% end %>

      <div class="flex flex-col gap-y-4">
        <div class="flex flex-col gap-y-1">
          <a href="<%= post.link %>" class="hover:underline underline-offset-2 font-medium text-lg">
            <%= post.title %>
          </a>

          <small class="dark:text-white max-h-14 text-ellipsis overflow-hidden">
            <%= post.description %>
          </small>
        </div>

        <small class="dark:text-white whitespace-nowrap"><%= local_time_ago(post.created_at) %></small>
      </div>
    </div>
  </div>
<% end %>
