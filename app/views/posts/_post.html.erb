<%= link_to post do %>
  <div class="dark:hover:bg-gray-900 hover:bg-gray-100 rounded-md px-4 py-3 cursor-pointer">
    <div class="flex flex-col gap-y-1">
      <a href="<%= post.link %>" class="hover:underline underline-offset-2">
        <%= post.title %>
      </a>
      <img src="<%= post.image %>" alt="bro">

      <small><%= post.description %></small>
    </div>
    <div>
      <!--  // TODO: mettre le nom du user ici -->
      <small>Submitted <%= local_time_ago(post.created_at) %> by anonymous </small>
    </div>
  </div>
<% end %>
