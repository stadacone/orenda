<div class="centered-form-layout">
  <%= form_with model: @user, url: sign_up_path do |form| %>
    <%= render partial: "shared/form_errors", locals: { object: form.object } %>
    <div class="flex flex-col gap-y-8">
      <div class="flex flex-col gap-y-4">
        <div class="flex flex-col joined-input-container">
          <%= form.text_field :username, placeholder: :username, required: true, class: "top-joined-input w-full px-3 py-2" %>
          <%= form.email_field :email, placeholder: :email, required: true, class: "bottom-joined-input w-full px-3 py-2" %>
        </div>
        <div class="flex flex-col joined-input-container">
          <%= form.password_field :password, placeholder: :password, required: true, class: "top-joined-input w-full px-3 py-2" %>
          <%= form.password_field :password_confirmation, placeholder: :password_confirmation, required: true, class: "bottom-joined-input w-full px-3 py-2" %>
        </div>
      </div>

      <%= form.submit "Sign up", class: "button-primary w-full sm:w-auto" %>
    </div>
  <% end %>
</div>
