<p style="color: red"><%= alert %></p>

<%= form_with url: login_path, scope: :user do |form| %>
  <div class="grid">
    <div>
      <%= form.label :username %>
      <%= form.text_field :username, required: true %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password, required: true %>
    </div>
  </div>
  <div>
    <%= form.label :remember_me do %>
      <%= form.check_box :remember_me %>
      Remember me
    <% end %>
  </div>
  <%= form.submit "Sign In" %>
<% end %>
